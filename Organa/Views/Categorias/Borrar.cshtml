@model CategoriaViewModel
@{
    ViewData["Title"] = "Borrar";
}
<div class="row">
    <div class="col-md-8  offset-md-2 by-10" id="BorrarCategoria">
        <div class="row" id="TituloBorrarCategoria">
            <h1>Borrar </h1>
        </div>
        <div class="row" id="SubtituloBorrarCategoria">
            <h3 class="mb-3">¡Esta seguro que desea borrar la categoria @Model.Nombre</h3>
        </div>
        <div class="row" id="FormularioBorrarCategoria">
            <form asp-action="BorrarCategoria">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn" id="BotonBorrarCategoria">Borrar</button>
                <a class="btn" asp-action="Index" id="botonCancelarBorrarCategoria">Cancelar</a>
            </form>
        </div>
    </div>
</div>