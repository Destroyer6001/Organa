@model CategoriaViewModel
@{
    ViewData["Title"] = "Crear Categoria";
}

<div class="row">
    <div class="col-md-8  offset-md-2 by-10" id="CrearCategoria">
        <div class="row" id="TituloCrearCategoria">
            <h1>Crear Categoria</h1>
        </div>

        <div class="row" id="SubtituloCrerCategoria">
            <h5>Una categoria hace referencia al tipo de ingrediente que un chef puede usar</h5>
        </div>

        <div class="row" id="FormularioCrearCategoria">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" id="CampoCategoriaCrear" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <button class="btn" id="CrearCategoriaBoton">Enviar</button>
                <a class="btn" id="CrearCategoriaCancelar" asp-action="Index">Cancelar</a>
            </form>
        </div>
    </div>
</div>


@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
